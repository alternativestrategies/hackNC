{
  "name": "hack",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^4.3.1",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.3.2",
    "mongoose": "^5.7.4",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.3",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-hook-form": "^3.23.18",
    "react-router": "^5.1.2",
    "react-scripts": "3.2.0"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install && cd ../routes && npm install",
    "build": "cd client && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}